<?xml version="1.0" encoding="utf-8"?>
<resources>

     <declare-styleable name="roundedimageview">
        <attr name="border_thickness" format="dimension" />
        <attr name="border_inside_color" format="color" />
        <attr name="border_outside_color" format="color"></attr>
    </declare-styleable>

    <declare-styleable name="custume_ripple_imageview">
        <attr name="show_spacing_time" format="integer"></attr>
        <attr name="imageViewWidth" format="dimension"></attr>
        <attr name="imageViewHeigth" format="dimension"></attr>
    </declare-styleable>



    <declare-styleable name="ProgressWheel">
        <attr name="text" format="string" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="barColor" format="color" />
        <attr name="rimColor" format="color" />
        <attr name="rimWidth" format="dimension" />
        <attr name="spinSpeed" format="dimension" />
        <attr name="delayMillis" format="integer" />
        <attr name="circleColor" format="color" />
        <attr name="radius" format="dimension" />
        <attr name="barWidth" format="dimension" />
        <attr name="newbarLength" format="dimension" />
        <attr name="contourColor" format="color"/>
        <attr name="contourSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CircleView">
        <attr name="circle_divider_width" format="dimension" />
        <attr name="circle_normal_gray" format="color" />

        <attr name="circle_out_indicator_size" format="dimension" />

        <attr name="circle_title_size" format="dimension" />
        <attr name="circle_content_size" format="dimension" />
        <attr name="circle_unit_size" format="dimension" />
        <attr name="circle_alert_size" format="dimension" />

        <attr name="circle_center_out" format="dimension" />
        <attr name="circle_center_middle" format="dimension" />
        <attr name="circle_center_inside" format="dimension" />

        <attr name="circle_indicator_center" format="color" />
        <attr name="circle_indicator_light" format="color" />
        <attr name="circle_indicator_gray" format="color" />

        <attr name="circle_title" format="color" />
        <attr name="circle_content" format="color" />
        <attr name="circle_unit" format="color" />
        <attr name="circle_alert" format="color" />
    </declare-styleable>

    <!-- Line Indicator -->
    <declare-styleable name="LineIndicator">
        <attr name="lineAlertColor" format="color|reference" />
        <attr name="lineAlertSize" format="dimension" />
        <attr name="lineProgressBackground" format="color" />
        <attr name="lineProgressColor" format="color" />
        <attr name="lineIndicatorTextSize" format="dimension" />
        <attr name="lineIndicatorTextColor" format="color" />
        <attr name="lineIndicatorBackground" format="color" />
    </declare-styleable>

    <!--透明渐变的TabView-->
    <declare-styleable name="AlphaView">
        <attr name="av_tabIconNormal" format="reference"/>
        <attr name="av_tabIconSelected" format="reference"/>
        <attr name="av_tabText" format="string"/>
        <attr name="av_tabTextSize" format="dimension"/>
        <attr name="av_textColorNormal" format="color"/>
        <attr name="av_textColorSelected" format="color"/>
    </declare-styleable>
</resources>