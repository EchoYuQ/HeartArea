<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

     />

    <android.support.v4.view.ViewPager

        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line" />

    <com.bupt.heartarea.ui.AlphaIndicator
        android:id="@+id/alphaIndicator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <com.bupt.heartarea.ui.AlphaView
            android:id="@+id/av_tab1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:padding="5dp"
            app:av_tabIconNormal="@mipmap/tab1_unpress"
            app:av_tabIconSelected="@mipmap/tab1_press"
            app:av_tabText="首页"
            app:av_tabTextSize="14sp"
            app:av_textColorNormal="#999999"
            app:av_textColorSelected="#46c01b" />

        <com.bupt.heartarea.ui.AlphaView
            android:id="@+id/av_tab2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:padding="5dp"
            app:av_tabIconNormal="@mipmap/tab2_unpress"
            app:av_tabIconSelected="@mipmap/tab2_press"
            app:av_tabText="评测"
            app:av_tabTextSize="14sp"
            app:av_textColorNormal="#999999"
            app:av_textColorSelected="#46c01b" />

        <com.bupt.heartarea.ui.AlphaView
            android:id="@+id/av_tab3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:padding="5dp"
            app:av_tabIconNormal="@mipmap/tab3_unpress"
            app:av_tabIconSelected="@mipmap/tab3_press"
            app:av_tabText="历史"
            app:av_tabTextSize="14sp"
            app:av_textColorNormal="#999999"
            app:av_textColorSelected="#46c01b" />

        <com.bupt.heartarea.ui.AlphaView
            android:id="@+id/av_tab4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:padding="5dp"
            app:av_tabIconNormal="@mipmap/tab4_unpress"
            app:av_tabIconSelected="@mipmap/tab4_press"
            app:av_tabText="资讯"
            app:av_tabTextSize="14sp"
            app:av_textColorNormal="#999999"
            app:av_textColorSelected="#46c01b" />

        <com.bupt.heartarea.ui.AlphaView
            android:id="@+id/av_tab5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:padding="5dp"
            app:av_tabIconNormal="@mipmap/tab5_unpress"
            app:av_tabIconSelected="@mipmap/tab5_press"
            app:av_tabText="我的"
            app:av_tabTextSize="14sp"
            app:av_textColorNormal="#999999"
            app:av_textColorSelected="#46c01b" />
    </com.bupt.heartarea.ui.AlphaIndicator>
</LinearLayout>