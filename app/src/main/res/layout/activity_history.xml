<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rg_choose"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/rb_null"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/bg_radiobutton"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/color_radiobutton"
            android:textSize="16sp"
            android:visibility="gone"/>
        <RadioButton
            android:id="@+id/rb_day"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/bg_radiobutton"
            android:button="@null"
            android:gravity="center"
            android:text="日"
            android:textColor="@drawable/color_radiobutton"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rb_week"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/bg_radiobutton"
            android:button="@null"
            android:gravity="center"
            android:text="周"
            android:textColor="@drawable/color_radiobutton"

            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rb_month"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/bg_radiobutton"
            android:button="@null"
            android:gravity="center"
            android:text="月"
            android:textColor="@drawable/color_radiobutton"

            android:textSize="16sp" />


    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/id_tv_history_data_type"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="心率"
            android:textColor="@color/history_measure_type_text"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/id_iv_last"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/id_tv_history_data_type"
            android:background="@drawable/type_back"
            android:clickable="true" />

        <ImageView
            android:id="@+id/id_iv_next"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"

            android:layout_toRightOf="@+id/id_tv_history_data_type"
            android:background="@drawable/type_next"
            android:clickable="true" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_history"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="5dp">

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/line" />

    <ListView
        android:id="@+id/lv_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
</LinearLayout>