<?xml version="1.1" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bupt.heartarea">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 在SDCard中创建与删除文件权限 -->
    <application
        android:allowBackup="true"

        android:icon="@drawable/icon_main"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.bupt.heartarea.activity.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">


        </activity>


        <activity android:name="com.bupt.heartarea.activity.MeasureActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity android:name="com.bupt.heartarea.activity.SaveDataActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity android:name="com.bupt.heartarea.activity.LoginActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity android:name="com.bupt.heartarea.activity.RegisterActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity android:name="com.bupt.heartarea.activity.ResultActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity android:name="com.bupt.heartarea.activity.HistoryActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity android:name="com.bupt.heartarea.activity.WebActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name="com.bupt.heartarea.activity.LogoActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name="com.bupt.heartarea.activity.MyInformationActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity android:name="com.bupt.heartarea.activity.ResetPwdActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity android:name=".activity.CompleteInformationActivity"
            android:screenOrientation="portrait">

        </activity>

    </application>

</manifest>
